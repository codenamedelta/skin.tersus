<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<onload condition="System.HasAddon(script.tvtunes)">XBMC.RunScript(script.tvtunes,backend=True)</onload>
	<controls>

		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>

		<include>GlobalBackground</include>
		<include>View_PosterList</include>
				
		<!-- GLOBAL DATE/CLOCK -->
		<include>GlobalDateClock</include>
		<include>BreadcrumbsVideo</include>
		
		<!-- NAVIGATION BG -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>360</width>
			<height>1080</height>
			<texture colordiffuse="$VAR[ColorDiffuseCommonDialogBackground]">skindefault/colordiffuse/white100solid.png</texture>
			<bordertexture colordiffuse="$VAR[ColorDiffuseCommonDialogBorder]">skindefault/colordiffuse/white100solid.png</bordertexture>
				<bordersize>0,0,2,0</bordersize>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0" end="-360" time="200"/>
			</animation>
		</control>
		
		<control type="image">
			<left>2.5</left>
			<top>15</top>
			<width>355</width>
			<height>75</height>
			<texture colordiffuse="$VAR[ColorDiffuseCommonDialogLogo]">skindefault/colordiffuse/tersuslogo.png</texture>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0" end="-360" time="200"/>
			</animation>
		</control>
		
		<control type="grouplist" id="9000">
			<width>360</width>
			<height>auto</height>
			<itemgap>3</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<align>center</align>
			<orientation>vertical</orientation>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0" end="-360" time="200"/>
			</animation>
			
			<!-- VIEW -->
			<control type="button" id="2">
				<include>LeftDialogButtonCommonValues</include>
			</control>

			<!-- SORT -->
			<control type="button" id="3">
				<include>LeftDialogButtonCommonValues</include>
			</control>

			<!-- ASCENDING/DECENDING -->
			<control type="togglebutton" id="4">
				<include>LeftDialogButtonCommonValues</include>
				<align>left</align>
				<label>$LOCALIZE[584]</label>
				<altlabel>$LOCALIZE[585]</altlabel>
			</control>

			<!-- FILES MODE -->
			<control type="button" id="5">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[31001]</label>
				<onclick>SetFocus(50)</onclick>
			</control>

			<!-- SEARCH -->
			<control type="button" id="8">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[137]</label>
			</control>

			<!-- UNLOCK SHARES -->
			<control type="radiobutton" id="11">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[20336]</label>
				<onclick>xbmc.mastermode</onclick>
				<selected>system.ismaster</selected>
				<visible>system.haslocks</visible>
			</control>
			
			<!-- WATCHED TOGGLE -->
			<control type="radiobutton" id="14">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[20367]</label>
			</control>

			<!-- PARTY MODE -->
			<control type="radiobutton" id="16">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[589]</label>
			</control>

			<!-- FILTER -->
			<control type="button" id="21">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[587]</label>
				<onclick>SendClick(videolibrary,19)</onclick>
				<onclick>SetFocus(22)</onclick>
				<visible>IsEmpty(Window.Property(filter))</visible>
			</control>

			<control type="button" id="22">
				<include>LeftDialogButtonCommonValues</include>
				<label>$INFO[Window.Property(filter)]</label>
				<onclick>SendClick(videolibrary,19)</onclick>
				<onclick>SetFocus(21)</onclick>
				<visible>!IsEmpty(Window.Property(filter))</visible>
			</control>

			<!-- UPDATE LIBRARY -->
			<control type="togglebutton" id="20">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[653]</label>
				<altlabel>$LOCALIZE[13353]</altlabel>
				<usealttexture>library.isscanningvideo</usealttexture>
			</control>
				
			<!-- PLAYER CONTROLS -->
			<control type="button" id="98">
				<include>LeftDialogButtonCommonValues</include>
				<label>$LOCALIZE[31015]</label>
				<onclick>ActivateWindow(playercontrols)</onclick>
				<visible>Player.HasMedia</visible>
			</control>
			
		</control>

	</controls>

</window>