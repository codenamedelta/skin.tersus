<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<onload condition="System.HasAddon(script.tvtunes)">XBMC.RunScript(script.tvtunes,backend=True)</onload>
	<controls>

		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>

		<include>GlobalBackground</include>
		<include>View_PosterList</include>
				
		<!-- GLOBAL DATE/CLOCK -->
		<include>GlobalDateClock</include>
		<include>BreadcrumbsVideo</include>
		
		<!-- NAVIGATION BG -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>360</width>
			<height>1080</height>
			<texture colordiffuse="$VAR[ColorDiffuseNavigationPanel]">skindefault/colordiffuse/white100solid.png</texture>
			<bordertexture colordiffuse="$VAR[ColorDiffuseNavigationPanelBorder]">skindefault/colordiffuse/white100solid.png</bordertexture>
				<bordersize>0,0,2,0</bordersize>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0" end="-360" time="200"/>
			</animation>
		</control>
		
		<control type="image">
			<left>2.5</left>
			<top>15</top>
			<width>355</width>
			<height>75</height>
			<texture colordiffuse="$VAR[ColorDiffuseNavigationLogo]">skindefault/colordiffuse/tersuslogo.png</texture>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0" end="-360" time="200"/>
			</animation>
		</control>
		
		<control type="grouplist" id="9000">
			<width>360</width>
			<height>auto</height>
			<itemgap>3</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<align>center</align>
			<orientation>vertical</orientation>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="0" end="-360" time="200"/>
			</animation>
			
			<control type="button" id="2">
				<description>View</description>
				<width>360</width>
				<align>left</align>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="button" id="3">
				<description>Sort</description>
				<width>360</width>
				<align>left</align>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="togglebutton" id="4">
				<description>Ascending</description>
				<width>360</width>
				<align>left</align>
				<label>584</label>
				<altlabel>585</altlabel>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="button" id="5">
				<description>Files</description>
				<width>360</width>
				<align>left</align>
				<label>31001</label>
				<onclick>SetFocus(50)</onclick>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="button" id="8">
				<description>Search</description>
				<width>360</width>
				<align>left</align>
				<label>137</label>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="radiobutton" id="11">
				<description>Unlock Shares</description>
				<width>360</width>
				<align>left</align>
				<label>20336</label>
				<onclick>xbmc.mastermode</onclick>
				<selected>system.ismaster</selected>
				<visible>system.haslocks</visible>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>
			
			<control type="radiobutton" id="14">
				<description>Watched Toggle</description>
				<width>360</width>
				<align>left</align>
				<label>20367</label>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="radiobutton" id="16">
				<description>PartyMode</description>
				<width>360</width>
				<align>left</align>
				<label>589</label>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="button" id="21">
				<description>Activate Filter</description>
				<width>360</width>
				<align>left</align>
				<label>587</label>
				<onclick>SendClick(videolibrary,19)</onclick>
				<onclick>SetFocus(22)</onclick>
				<visible>IsEmpty(Window.Property(filter))</visible>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="button" id="22">
				<description>Show Filter Label</description>
				<width>360</width>
				<align>left</align>
				<label>$INFO[Window.Property(filter)]</label>
				<onclick>SendClick(videolibrary,19)</onclick>
				<onclick>SetFocus(21)</onclick>
				<visible>!IsEmpty(Window.Property(filter))</visible>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>

			<control type="togglebutton" id="20">
				<description>Update library</description>
				<width>360</width>
				<align>left</align>
				<label>653</label>
				<altlabel>13353</altlabel>
				<alttexturefocus border="5">button-focus.png</alttexturefocus>
				<alttexturenofocus>-</alttexturenofocus>
				<usealttexture>library.isscanningvideo</usealttexture>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>
				
			<control type="button" id="98">
				<description>Open Player Controls</description>
				<width>360</width>
				<align>left</align>
				<label>31015</label>
				<onclick>ActivateWindow(playercontrols)</onclick>
				<visible>Player.HasMedia</visible>
				<font>SmallCAP</font>
				<textcolor>$VAR[ColorDiffuseContextMenuText]</textcolor>
				<focusedcolor>$VAR[ColorDiffuseContextMenuTextFocused]</focusedcolor>
			</control>
			
		</control>

	</controls>

</window>