<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

	<include file="Defaults.xml" />
	<include file="View_50_List.xml" />
	<include file="Variables.xml" />
	<include file="Variables_ColorDiffuse.xml" />
	<include file="Variables_PosterList.xml" />
	<include file="Variables_Home.xml" />
	<include file="Variables_Breadcrumbs.xml" />
	<include file="Includes_Animations.xml" />
	<include file="Includes_Breadcrumbs.xml" />
	<include file="Includes_Home.xml" />
	
	<include name="HiddenButton">
		<left>-20</left>
		<top>-20</top>
		<width>1</width>
		<height>1</height>
		<label>-</label>
		<texturenofocus>-</texturenofocus>
		<texturefocus>-</texturefocus>
	</include>

	<include name="Dimensions_Fullscreen">
		<left>0</left>
		<top>0</top>
		<width>1920</width>
		<height>1080</height>
	</include>

	<include name="WindowID">
		<width>780</width>
		<height>21</height>
		<textcolor>Blue</textcolor>
		<shadowcolor>Black</shadowcolor>
		<align>left</align>
	</include>

	<include name="DialogID">
		<width>780</width>
		<height>21</height>
		<textcolor>Green</textcolor>
		<shadowcolor>Black</shadowcolor>
		<align>left</align>
	</include>

	<include name="PathID">
		<left>15r</left>
		<top>15</top>
		<width>780</width>
		<height>21</height>
		<textcolor>Blue</textcolor>
		<shadowcolor>Black</shadowcolor>
		<align>right</align>
	</include>

	<include name="ControlID">
		<left>15r</left>
		<top>48</top>
		<width>780</width>
		<height>21</height>
		<textcolor>Red</textcolor>
		<shadowcolor>Black</shadowcolor>
		<align>right</align>
	</include>

	<include name="GlobalOverlay">
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture colordiffuse="$VAR[ColorDiffuseGlobalOverlay]" border="2">skindefault/colordiffuse/white80.png</texture>
		</control>
	</include>
	<!-- Global Date/Clock/Temperature -->
	<include name="GlobalDateClock">
		<control type="group">
			<visible>Window.IsActive(home) | Window.IsActive(settings) | Window.IsActive(settingscategory.xml)</visible>
			<control type="label">
				<left>5</left>
				<top>5</top>
				<width>500</width>
				<height>30</height>
				<label>$INFO[System.Date(DDD)], $INFO[System.Date(MMM d)], $INFO[System.Date(yyyy)]</label>
				<font>MediumCAP</font>
				<textcolor>$VAR[ColorDiffuseGlobalDateClockHomeSettingsText]</textcolor>
				<align>left</align>
				<scroll>false</scroll>
			</control>
			<control type="label">
				<left>5</left>
				<top>50</top>
				<width>400</width>
				<height>30</height>
				<label>$INFO[System.Time(hh:mm:xx)] [COLOR $VAR[ColorDiffuseGlobalDateClockHomeSettingsAltText]]$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits][/COLOR]</label>
				<font>XLargeCAP</font>
				<textcolor>$VAR[ColorDiffuseGlobalDateClockHomeSettingsText]</textcolor>
				<align>left</align>
				<scroll>false</scroll>
			</control>
		</control>
		<control type="group">
			<visible>![Window.IsActive(home) | Window.IsActive(settings) | Window.IsActive(settingscategory.xml)] + Window.IsActive(seekbar)</visible>
			<control type="label">
				<left>5</left>
				<top>5</top>
				<width>500</width>
				<height>30</height>
				<label>$INFO[System.Date(DDD)], $INFO[System.Date(MMM d)], $INFO[System.Date(yyyy)]</label>
				<font>MediumCAP</font>
				<textcolor>$VAR[ColorDiffuseGlobalDateClockSeekbarText]</textcolor>
				<align>left</align>
				<scroll>false</scroll>
			</control>
			<control type="label">
				<left>5</left>
				<top>50</top>
				<width>400</width>
				<height>30</height>
				<label>$INFO[System.Time(hh:mm:xx)] [COLOR $VAR[ColorDiffuseGlobalDateClockSeekbarAltText]]$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits][/COLOR]</label>
				<font>XLargeCAP</font>
				<textcolor>$VAR[ColorDiffuseGlobalDateClockSeekbarText]</textcolor>
				<align>left</align>
				<scroll>false</scroll>
			</control>
		</control>
		<control type="group">
			<visible>![Window.IsActive(home) | Window.IsActive(settings) | Window.IsActive(settingscategory.xml) | Window.IsActive(seekbar)] + !Skin.HasSetting(ShowBreadcrumbs)</visible>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>350</width>
				<height>70</height>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalDateClock]">skindefault/colordiffuse/white75.png</texture>
			</control>
			<control type="label">
				<left>0</left>
				<top>5</top>
				<width>350</width>
				<height>60</height>
				<label>$INFO[System.Time(hh:mm:xx)] [COLOR $VAR[ColorDiffuseGlobalDateClockAltText]]$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits][/COLOR]</label>
				<font>XLargeCAP</font>
				<textcolor>$VAR[ColorDiffuseGlobalDateClockText]</textcolor>
				<align>center</align>
				<scroll>false</scroll>
			</control>
		</control>
		<control type="group">
			<visible>![Window.IsActive(home) | Window.IsActive(settings) | Window.IsActive(settingscategory.xml) | Window.IsActive(seekbar)] + Skin.HasSetting(ShowBreadcrumbs)</visible>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>70</height>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalDateClock]">skindefault/colordiffuse/white75.png</texture>
			</control>
			<control type="label">
				<left>0</left>
				<top>5</top>
				<width>350</width>
				<height>60</height>
				<label>$INFO[System.Time(hh:mm:xx)] [COLOR $VAR[ColorDiffuseGlobalDateClockAltText]]$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits][/COLOR]</label>
				<font>XLargeCAP</font>
				<textcolor>$VAR[ColorDiffuseGlobalDateClockText]</textcolor>
				<align>center</align>
				<scroll>false</scroll>
			</control>
		</control>
	</include>
			

	<include name="GlobalBackground">

		<control type="group">
			<visible>!Player.HasMedia | [Player.HasAudio + Skin.HasSetting(NoBackgroundVisualiser)] | [Player.HasVideo + Skin.HasSetting(NoBackgroundVideo)]</visible>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>[!IsEmpty(ListItem.foldername) + Container.Content(Movies)]</visible>
			</control>
			
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalOverlay]" border="2">skindefault/colordiffuse/white80.png</texture>
				<visible>[!IsEmpty(ListItem.foldername) + Container.Content(Movies)]</visible>
			</control>
			
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalBackground]" border="2">skindefault/colordiffuse/white100solid.png</texture>
				<visible>!Window.IsVisible(videolibrary)</visible>
			</control>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(TVShows) | [Container.Content(Episodes) + stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>
			
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalOverlay]" border="2">skindefault/colordiffuse/white80.png</texture>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(TVShows) | [Container.Content(Episodes) + stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>
			
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[Fanart.Image]</texture>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(Seasons) | [Container.Content(Episodes) + !stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>
			
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalOverlay]" border="2">skindefault/colordiffuse/white80.png</texture>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(Seasons) | [Container.Content(Episodes) + !stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>
		</control>

		<control type="group">
			<visible>[Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)] | [Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)]</visible>

			<control type="visualisation">
				<include>Dimensions_Fullscreen</include>
				<visible>Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)</visible>
			</control>

			<control type="videowindow">
				<include>Dimensions_Fullscreen</include>
				<visible>Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)</visible>
			</control>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture colordiffuse="$VAR[ColorDiffuseGlobalBackground]" border="2">skindefault/colordiffuse/white100solid.png</texture>
			</control>

		</control>
	
	</include>

</includes>