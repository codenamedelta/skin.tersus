						<left>20</left>
						<top>-8</top>
						<width>735</width>
						<font>ViewFontMedium</font>
						<textcolor>$VAR[ColorDiffusePosterListSelectionLabelText]</textcolor>
						<selectedcolor>$VAR[ColorDiffusePosterListSelectionLabelTextFocused]</selectedcolor>
