			<left>1317</left>
			<top>51</top>
			<height>978</height>
			<onleft>50</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">Control.HasFocus(60) | Container.Scrolling</visible>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling">Conditional</animation>
		</control>-->
		
			
			<control type="image">
				<left>558</left>
				<top>1010</top>
				<width>1314</width>
				<height>70</height>
				<texture colordiffuse="$VAR[ColorDiffusePosterListItemCounts]">skindefault/colordiffuse/white75.png</texture>
			</control>
			
		<control type="group">
					
			<control type="grouplist">
				<left>558</left>
				<top>1010</top>
				<align>left</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
					
					<control type="label">
						<height>40</height>
						<width min="15" max="1314">auto</width>
						<label>$VAR[PosterListSeasonCount]</label>
						<font>MediumCAP</font>
						<textcolor>$VAR[ColorDiffuseBreadcrumbsText]</textcolor>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<height>40</height>
						<width min="15" max="1314">auto</width>
						<label>$VAR[PosterListEpisodeCount]</label>
						<font>MediumCAP</font>
						<textcolor>$VAR[ColorDiffuseBreadcrumbsText]</textcolor>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<height>40</height>
						<width min="15" max="1314">auto</width>
						<label>$VAR[PosterListUnWatchedCount]</label>
						<font>MediumCAP</font>
						<textcolor>$VAR[ColorDiffuseBreadcrumbsText]</textcolor>
						<scroll>false</scroll>
					</control>
					
			</control>		
			
			<!-- PAGE COUNT & TOTAL ITEM COUNT -->
				<control type="grouplist">
				<right>70</right>
				<top>1010</top>
				<align>right</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
					
					<control type="label">
						<height>75</height>
						<width min="15" max="500">auto</width>
						<label>$LOCALIZE[31028] ($INFO[Container.CurrentPage]$INFO[Container.NumPages,/])  </label>
						<font>SmallCAP</font>
						<textcolor>$VAR[ColorDiffuseBreadcrumbsText]</textcolor>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<height>75</height>
						<width min="15" max="500">auto</width>
						<label>$LOCALIZE[31027] ($INFO[Container.NumItems])</label>
						<font>SmallCAP</font>
						<textcolor>$VAR[ColorDiffuseBreadcrumbsText]</textcolor>
						<scroll>false</scroll>
					</control>
									
			</control>		
			
		</control>

	</include>

</includes>
