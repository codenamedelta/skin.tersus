<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

	<include name="View_PosterList">
	
		<description>List View (id=50)</description>
		
		<!-- CONTENT PANEL BACKGROUND -->
		<control type="image">
			<left>558</left>
			<top>108</top>
			<width>1314</width>
			<height>864</height>
			<texture colordiffuse="$VAR[ColorDiffusePosterListContentPanel]">skindefault/colordiffuse/white60.png</texture>
		</control>
		
		<control type="list" id="50">
			<left>558</left>
			<top>108</top>
			<width>1314</width>
			<height>864</height>
			<onleft>9050</onleft>
			<onright>9000</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<pagecontrol>60</pagecontrol>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="50" time="200" />
				<effect type="zoom" center="1290,540" start="100" end="90" time="200" />
			</animation>
			<animation type="Conditional" condition="Control.HasFocus(9050)">
				<effect type="fade" start="100" end="50" time="200" />
				<effect type="zoom" center="1290,540" start="100" end="90" time="200" />
			</animation>
			
			<itemlayout width="1314" height="80">

				<control type="label">
					<left>20</left>
					<top>-8</top>
					<width>735</width>
					<font>ViewFontMedium</font>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabelText]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>![Container.Content(episodes)]</visible>
				</control>
				
				<control type="label">
					<left>20</left>
					<top>-8</top>
					<width>735</width>
					<font>ViewFontMedium</font>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabelText]</textcolor>
					<label>$INFO[ListItem.Title]</label>
					<visible>[Container.Content(episodes)]</visible>
				</control>

			</itemlayout>

			<focusedlayout width="1314" height="80" condition="![Container.Content(episodes)]">
				
				<control type="image">
					<width>1314</width>
					<height>80</height>
					<texture colordiffuse="$VAR[ColorDiffusePosterListSelection]" border="5">$VAR[PosterListSelectionButton]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>

				<control type="label">
					<left>20</left>
					<top>-8</top>
					<width>730</width>
					<font>ViewFontMedium</font>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabelTextFocused]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<include>PosterListSelectionAnimation</include>		
					<include>PosterListSelectionEpisodeWatchedAnimation</include>					
				</control>
				
				<control type="label">
					<left>20</left>
					<top>25</top>
					<width>730</width>
					<font>ViewFontSmall</font>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabel2TextFocused]</textcolor>
					<label>$INFO[ListItem.Year]$INFO[ListItem.Genre, - ]</label>
					<scrollsuffix>   |   </scrollsuffix>
					<include>PosterListSelectionAnimation</include>
					<include>PosterListSelectionEpisodeWatchedAnimation</include>
				</control>
				
				<control type="image">
					<left>-5</left>
					<top>15</top>
					<width>50</width>
					<height>50</height>
					<fadetime>100</fadetime>
					<texture colordiffuse="$VAR[ColorDiffusePosterListOverlay]">$INFO[ListItem.Overlay]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>
				
				<control type="image">
					<left>1072</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<visible>!IsEmpty(ListItem.Thumb)</visible>
					<texture colordiffuse="$VAR[ColorDiffusePosterListFlags]">$VAR[RatingFlagVar,skindefault/flags/rating/,.png]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>
				
				<control type="image">
					<left>1194</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<visible>!IsEmpty(ListItem.Thumb)</visible>
					<texture colordiffuse="$VAR[ColorDiffusePosterListFlags]">$INFO[ListItem.Studio,skindefault/flags/studios/,.png]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>			

			</focusedlayout>
			
			<!-- EPISODES VIEW FOCUSED LAYOUT -->
			<focusedlayout width="1314" height="80" condition="[Container.Content(episodes)]">
				
				<control type="image">
					<width>1314</width>
					<height>80</height>
					<texture colordiffuse="$VAR[ColorDiffusePosterListSelection]" border="5">$VAR[PosterListSelectionButton]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>

				<control type="label">
					<left>40</left>
					<width>80</width>
					<height>80</height>
					<font>ViewFontMedium</font>
					<align>center</align>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabelTextFocused]</textcolor>
					<label>$INFO[ListItem.Episode]</label>	
					<include>PosterListSelectionAnimation</include>
				</control>
				
				<control type="label">
					<left>102</left>
					<top>-8</top>
					<width>725</width>
					<font>ViewFontMedium</font>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabelTextFocused]</textcolor>
					<label>$INFO[ListItem.Title]</label>
					<include>PosterListSelectionAnimation</include>
					<include>PosterListSelectionEpisodeWatchedAnimation</include>
				</control>
				
				<control type="label">
					<left>102</left>
					<top>25</top>
					<width>725</width>
					<font>ViewFontSmall</font>
					<textcolor>$VAR[ColorDiffusePosterListSelectionLabel2TextFocused]</textcolor>
					<label>$INFO[ListItem.Year]$INFO[ListItem.Genre, - ]</label>
					<scrollsuffix>   |   </scrollsuffix>
					<include>PosterListSelectionAnimation</include>
					<include>PosterListSelectionEpisodeWatchedAnimation</include>
				</control>
				
				<control type="image">
					<left>77</left>
					<top>15</top>
					<width>50</width>
					<height>50</height>
					<fadetime>100</fadetime>
					<texture colordiffuse="$VAR[ColorDiffusePosterListOverlay]">$INFO[ListItem.Overlay]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>
				
				<control type="image">
					<posx>952</posx>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[ColorDiffusePosterListFlags]">$INFO[ListItem.VideoResolution,skindefault/flags/resolution/,.png]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>
				
				<control type="image">
					<posx>1072</posx>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>			
					<texture colordiffuse="$VAR[ColorDiffusePosterListFlags]">$VAR[SourceFlagVar,skindefault/flags/source/,.png]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>
				
				<control type="image">
					<posx>1194</posx>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[ColorDiffusePosterListFlags]">$VAR[AudioFlagVar,skindefault/flags/audio/,.png]</texture>
					<include>PosterListSelectionAnimation</include>
				</control>				

			</focusedlayout>

		</control>
		
		<!-- HIDDEN CONTROL FOR PLOT -->
		<control type="button" id="9050">
			<include>HiddenButton</include>
			<onright>50</onright>
			<visible>!IsEmpty(ListItem.Plot)</visible>
		</control>
		
		<!-- PLOT GROUP - TV, TV SEASONS, MOVIES -->
		<control type="group">
			<left>560</left>
			<top>405</top>
			<animation type="Conditional" condition="!Control.HasFocus(9050)">
				<effect type="slide" start="0" end="1920" time="400"/>
			</animation>
			<defaultcontrol>9050</defaultcontrol>
			
			<control type="image">
				<width>1310</width>
				<height>270</height>
				<texture colordiffuse="$VAR[ColorDiffusePosterListPlot]">skindefault/colordiffuse/white100solid.png</texture>
			</control>
			
			<control type="textbox" id="9050">
				<left>5</left>
				<top>5</top>
				<width>1300</width>
				<height>258</height>
				<scroll>true</scroll>
				<font>Small</font>
				<textcolor>$VAR[ColorDiffusePosterListPlotText]</textcolor>
				<align>justify</align>
				<shadowcolor></shadowcolor>
				<label>$INFO[ListItem.Plot]</label>
				<autoscroll delay="8000" time="5000" repeat="8000">true</autoscroll>
			</control>
		</control>
			
		<!-- POSTER IMAGE -->
		<control type="image">
			<left>48</left>
			<top>177</top>
			<width>505</width>
			<height>720</height>
			<fadetime>100</fadetime>
			<aspectratio align="left" aligny="top">scale</aspectratio>
			<texture fallback="DefaultAddonNone.png">$VAR[PosterVar]</texture>
			<bordertexture colordiffuse="$VAR[ColorDiffusePosterListPosterBorder]">skindefault/colordiffuse/white60.png</bordertexture>
			<bordersize>2</bordersize>
		</control>
		
		<!-- POSSIBLE LATER INTEGRATION - WATCHED OVERLAY
		<control type="image">
			<left>503</left>
			<top>177</top>
			<width>50</width>
			<height>50</height>
			<fadetime>100</fadetime>
			<texture>$INFO[ListItem.Overlay]</texture>
			<colordiffuse>FF00ce27</colordiffuse>
			<visible>![Container.Content(episodes)]</visible>
		</control>
		-->
		
