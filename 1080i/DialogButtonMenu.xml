<?xml version="1.0" encoding="UTF-8"?>
<!-- TERSUS -->
<window type="buttonMenu" id="111">
	<defaultcontrol always="true">3110</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>GlobalOverlay</include>

		<control type="group">
			<left>0</left>
			<top>0</top>
			<height>1080</height>
						
			<control type="group">
			
				<animation effect="slide" start="-360" end="0" time="200">WindowOpen</animation>
				<animation effect="slide" start="0" end="-360" time="200">WindowClose</animation>

				<control type="image">
					<width>360</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[ColorDiffuseCommonDialogBackground]" background="true">skindefault/colordiffuse/white100solid.png</texture>
					<bordertexture colordiffuse="$VAR[ColorDiffuseCommonDialogBorder]">skindefault/colordiffuse/white100solid.png</bordertexture>
					<bordersize>0,0,2,0</bordersize>
				</control>
				
				<control type="image">
					<left>.5</left>
					<top>15</top>
					<width>355</width>
					<height>75</height>
					<texture colordiffuse="$VAR[ColorDiffuseCommonDialogLogo]" background="true">skindefault/colordiffuse/tersuslogo.png</texture>
				</control>

				<control type="grouplist" id="3110">
					<width>360</width>
					<height>auto</height>
					<itemgap>3</itemgap>
					<align>center</align>
					<orientation>vertical</orientation>

					<!-- EXIT -->
					<control type="button" id="3111">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[13012]</label>
						<onclick>Quit()</onclick>
						<visible>System.ShowExitButton</visible>
					</control>
					
					<!-- MASTER MODE -->
					<control type="button" id="3112">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[20046]</label>
						<altlabel>$LOCALIZE[20045]</altlabel>
						<onclick>xbmc.mastermode</onclick>
						<visible>System.HasLocks</visible>
					</control>
					
					<!-- LOGOFF -->
					<control type="button" id="3113">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>System.LogOff</onclick>
						<visible>System.Loggedon + System.HasLoginScreen</visible>
					</control>

					<!-- SHUTDOWN -->
					<control type="button" id="3116">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[13005]</label>
						<onclick>ShutDown()</onclick>
					</control>
					
					<!-- SUSPEND -->
					<control type="button" id="3117">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[13011]</label>
						<onclick>XBMC.Suspend()</onclick>
					</control>

					<!-- REBOOT -->
					<control type="button" id="3118">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[13013]</label>
						<onclick>XBMC.Reset()</onclick>
					</control>
					
					<!-- SHUTDOWN TIMER BUTTON -->
					<control type="button" id="3115">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[20144]</label>
						<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
						<visible>!System.HasAlarm(shutdowntimer)</visible>
					</control>

					<!-- ALARM TIME -->
					<control type="button" id="3119">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[20144] [B]$INFO[System.Alarmpos][/B]</label>
						<visible>System.HasAlarm(shutdowntimer)</visible>
						<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
						<visible>System.HasAlarm(shutdowntimer)</visible>
					</control>

					<!-- PLAYER CONTROLS -->
					<control type="button" id="3120">
						<include>LeftDialogButtonCommonValues</include>
						<label>$LOCALIZE[31015]</label>
						<onclick>ActivateWindow(playercontrols)</onclick>
						<visible>Player.HasMedia</visible>
					</control>

				</control>
				
			</control>

		</control>

	</controls>

</window>