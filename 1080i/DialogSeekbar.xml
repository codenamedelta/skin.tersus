<?xml version="1.0" encoding="UTF-8"?>
<!-- Tersus -->
<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>[Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsVisible(videoosd)] + ![VideoPlayer.Content(livetv) | Window.IsVisible(fullscreeninfo)] + Window.IsVisible(fullscreenvideo)</visible>

	<controls>
	
		<!-- TOP BAR -->
		<control type="group">
			<left>0</left>
			<top>0</top>
			<visible>![Skin.HasSetting(CleanOSD)  | Substring(Window(10000).Property(PseudoTVRunning),True)] + [VideoPlayer.Content(movies) | VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)]</visible>
			<animation effect="slide" start="0,-150" time="1000">WindowOpen</animation>
			<animation effect="slide" end="0,-150" time="1000">WindowClose</animation>

			<!-- BAR BACKGROUND COLOR -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>150</height>
				<texture colordiffuse="$VAR[ColorDiffuseSeekbarBackground]">skindefault/colordiffuse/white100solid.png</texture>
				<bordertexture colordiffuse="$VAR[ColorDiffuseSeekbarBorder]">skindefault/colordiffuse/white100solid.png</bordertexture>
				<bordersize>0,0,0,10</bordersize>
			</control>
			
			<!-- TVSHOW POSTER -->
			<control type="image">
            	<left>1615</left>
                <top>25</top>
                <width>255</width>
				<height>350</height>
                <texture background="true">$VAR[PlayerPosterVar]</texture>
                <aspectratio aligny="bottom">stretch</aspectratio>
				<bordertexture colordiffuse="$VAR[ColorDiffuseSeekbarBorder]">skindefault/colordiffuse/white100solid.png</bordertexture>
				<bordersize>10</bordersize>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
            </control>
			
			<control type="image">
            	<left>1615</left>
                <top>375</top>
				<width>255</width>
				<height>30</height>
                <texture>other_textures/white-back.png</texture>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
            </control>
			
			<control type="image">
            	<left>1682</left>
                <top>375</top>
				<align>center</align>
                <texture background="true">$INFO[Player.StarRating]</texture>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
            </control>	
			
			<!-- TIME AND DATE DISPLAY -->
			<include>GlobalDateClock</include>	
			
			<!-- FLAGS (video type, resolution, aspect ratio, audio type, studio, FCC rating (tv), MPAA rating (movies), etc...) -->
			<control type="group">
            	<left>1000</left>
				<top>65</top>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
				
				<control type="image">
            		<left>0</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/studios/default-studio.png">$INFO[VideoPlayer.Studio,skindefault/flags/studios/,.png]</texture>
                    <visible>!VideoPlayer.Content(files)</visible>
            	</control>
            	
				<control type="image">
            		<left>120</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/aspectratio/defaultaspect.png">$INFO[VideoPlayer.VideoAspect,skindefault/flags/aspectratio/,.png]</texture>
            	</control>
				
				<control type="image">
            		<left>240</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/resolution/defaultscreen.png">$INFO[VideoPlayer.VideoResolution,skindefault/flags/resolution/,.png]</texture>
            	</control>
				
				<control type="image">
            		<left>360</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/source/defaultsource.png">$VAR[VideoSourceFlagVar,skindefault/flags/source/,.png]</texture>
            	</control>
				
            	<control type="image">
            		<left>480</left>
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/audio/defaultsound.png">$INFO[VideoPlayer.AudioCodec,skindefault/flags/info/]$INFO[VideoPlayer.AudioChannels,,.png]</texture>
            	</control>
				
			</control>
			
		</control>

		<!-- BOTTOM BAR -->
		<control type="group">
			<left>0</left>
			<top>930</top>
			<animation effect="slide" start="0,150" time="1000">WindowOpen</animation>
			<animation effect="slide" end="0,150" time="1000">WindowClose</animation>
			
			<control type="image">
                <left>15</left>
				<top>-234</top>
                <width>345</width>
                <height>234</height>
                <texture background="true">$VAR[PlayerArtworkVar]</texture>
                <aspectratio aligny="bottom">keep</aspectratio>
				<animation effect="slide" start="0,500" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,500" time="1250">WindowClose</animation>
				<visible>![Skin.HasSetting(CleanOSD) | Substring(Window(10000).Property(PseudoTVRunning),True)] + [VideoPlayer.Content(movies) | VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)]</visible>
            </control>
			
			<!-- BAR BACKGROUND COLOR -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>150</height>
				<texture colordiffuse="$VAR[ColorDiffuseSeekbarBackground]">skindefault/colordiffuse/white100solid.png</texture>
				<bordertexture colordiffuse="$VAR[ColorDiffuseSeekbarBorder]">skindefault/colordiffuse/white100solid.png</bordertexture>
				<bordersize>0,10,0,0</bordersize>
			</control>
			
			<control type="label">
				<left>1905</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>right</align>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
			</control>

			<control type="label">
				<left>0</left> 
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>$LOCALIZE[31000] $INFO[Player.FinishTime]</label>
				<visible>!Player.Forwarding + !Player.Rewinding + !Player.Paused</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>[UPPERCASE]$LOCALIZE[112][/UPPERCASE]</label>
				<visible>player.paused</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx2</label>
				<visible>player.forwarding2x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx4</label>
				<visible>player.forwarding4x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx8</label>
				<visible>player.forwarding8x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx16</label>
				<visible>player.forwarding16x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx32</label>
				<visible>player.forwarding32x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx2</label>
				<visible>player.rewinding2x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx7</label>
				<visible>player.rewinding4x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx8</label>
				<visible>player.rewinding8x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx16</label>
				<visible>player.rewinding16x</visible>
			</control>

			<control type="label">
				<left>0</left>
				<top>90</top>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx32</label>
				<visible>player.rewinding32x</visible>
			</control>
			
			<control type="label">
				<left>1905</left>
				<top>15</top>
				<width>1920</width>
				<align>right</align>
				<font>XXLarge</font>
				<textcolor>White</textcolor>
				<label>[UPPERCASE]$INFO[Player.Title][/UPPERCASE]</label>
			</control>
			
			<control type="label">
				<left>15</left>
				<top>15</top>
				<width>1680</width>
				<align>left</align>
				<font>XXLarge</font>
				<textcolor>White</textcolor>
				<label>[UPPERCASE]$INFO[VideoPlayer.TVShowTitle][/UPPERCASE]</label>
			</control>			

			<control type="progress" id="23">
				<description>Progress Bar</description>
				<left>15</left>
				<top>80</top>
				<width>1890</width>
				<height>16</height>
				<info>Player.Progress</info>
				<texturebg colordiffuse="$VAR[ColorDiffuseSeekbarBorder]" border="1">skindefault/colordiffuse/white100solid.png</texturebg>
				<midtexture border="1">other_textures/OSD/ProgressMid.png</midtexture>
				<visible>true</visible>
			</control>

			<control type="slider" id="401">
				<description>Seekbar</description>
				<left>15</left>
				<top>85</top>
				<width>1680</width>
				<visible>Player.Seeking</visible>
			</control>

		</control>	

	</controls>

</window>